<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Futsal">
	<select id="loadlist" parameterType="hashmap"
		resultType="GroundInfoBean">
		SELECT * FROM
		(SELECT ROWNUM r, a.* FROM
		(SELECT * FROM
		TBL_GROUNDINFO
		ORDER BY GROUNDNUM) a) b
		WHERE b.r BETWEEN ${startNum} AND ${endNum}
	</select>
	
	<select id="registloadlist" parameterType="String"
		resultType="groundinfoBean">
		SELECT * FROM TBL_GROUNDINFO WHERE EPUSERID = #{epuserid}
	</select>

	<insert id="rservartion">
		INSERT INTO TBL_RESERVATION
		VALUES(#{RESERVATOIN_SEQ},#{USERID},#{GROUNDNUM},#{GROUNDTIME},#{GROUNDFEE},#{RSEEVATIONDATE},#{EPUSERID})
	</insert>

	<insert id="groundregist" parameterType="GroundInfoBean">
	
		INSERT INTO
		TBL_GROUNDINFO
		VALUES(seq_groundnum.nextval, #{epuserid}, #{groundname}, #{groundarea}, #{userpostcode},
		#{useraddr}, #{useraddrdetail}, #{useraddretc}, #{hashTag},
		#{weekDayBasicFee}, #{weekEndBasicFee},#{imgname},#{imgrealname})
		
	</insert>

	<insert id="weekDayHotregist" parameterType="hashmap">
	
	INSERT INTO TBL_GROUNDHOTTIME
	(GROUNDFEENUM, GROUNDNUM, GROUNDWEEK, GROUNDTIME, GROUNDHOTTIMEFEE)
	VALUES(seq_groundfeenum.nextval, seq_groundnum.CURRVAL, 0, #{weekDaytime}, #{weekDayHotTimeFee})
	
	</insert>
	
	<insert id="weekEndHotregist" parameterType="hashmap">
	
	INSERT INTO TBL_GROUNDHOTTIME
	(GROUNDFEENUM, GROUNDNUM, GROUNDWEEK, GROUNDTIME, GROUNDHOTTIMEFEE)
	VALUES(seq_groundfeenum.nextval, seq_groundnum.CURRVAL, 1, #{weekEndtime}, #{weekEndHotTimeFee})
	
	</insert>
	
	<delete id="delList" parameterType="String">
		DELETE FROM TBL_GROUNDINFO WHERE GROUNDNUM = #{listnum}
	</delete>

	<delete id="delHottime" parameterType="String">
		DELETE FROM TBL_GROUNDHOTTIME WHERE GROUNDNUM = #{listnum}
	</delete>
	
	<select id="getinfo" parameterType="String" resultType="GroundInfoBean">
		select * from tbl_groundInfo where groundnum = #{groundnum}
	</select>
	
	<select id="getHottime" parameterType="String" resultType="HottimeBean">
		select * from tbl_groundHottime where groundnum = #{groundnum}
	</select>
	
	<select id = "getstatus" parameterType = "usageStatusBean" resultType="usageStatusBean">
		SELECT * FROM tbl_usagstatus WHERE groundnum = #{groundnum} AND reservationdate = #{reservationdate}
	</select>
	
</mapper>